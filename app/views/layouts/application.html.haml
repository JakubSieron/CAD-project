!!!
%html
%head
	%title Holiday Request Form
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	%link{ rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Lato:400,700,300", type: "text/css"}
	%link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css"}
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%header.main_header.clearfix
		.wrapper
			#logo
				%p Holiday Request Form
			#buttons
				= link_to "Holiday Request", new_holiday_path

	.wrapper
		%p.notice= notice
		%p.alert= alert

	.wrapper
		= yield

